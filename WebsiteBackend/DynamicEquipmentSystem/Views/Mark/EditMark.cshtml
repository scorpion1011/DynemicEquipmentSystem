@model DynamicEquipmentSystem.ViewModels.MarkViewModel
@{
    ViewBag.Title = "Змінити інформацію про маркер";
}
<form asp-controller="Mark" asp-action="UpdateMark" asp-for="IdMark">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group" style="visibility:hidden">
        <input type="text" asp-for="IdMark" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Назва маркеру</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="control-label">Цей маркер ваш?</label>
        <input type="checkbox" asp-for="IsActive" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Змінити" class="btn btn-default" />
    </div>
</form>