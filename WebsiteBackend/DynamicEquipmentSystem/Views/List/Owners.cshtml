@model DynamicEquipmentSystem.ViewModels.ListOfFriendsOwnersViewModel
@{
    ViewData["Title"] = "Owners";
}

<form asp-controller="List" asp-action="OwnersAsync">
    <div asp-validation-summary="All" class="text-danger"></div>

    @foreach (var owner in Model.List)
    {
        <div>
            <div class="form-group">
                <input type="hidden" asp-for="@owner.friendId" class="form-control" />
            </div>

            <input type="checkbox" name="ownersId" value="@owner.friendId"
                   @(owner.isOwner ? "checked=\"checked\"" : "") />@owner.friendName <br />
        </div>
     }
    <div class="form-group">
        <input type="submit" value="Підтвердити" class="btn btn-default" />
    </div>
</form>